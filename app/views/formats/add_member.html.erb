<%= turbo_frame_tag @member do %>
    <%= bootstrap_form_with(model: @member, url: create_member_format_path, local: true) do |form| %>
        <div class="member">
            <%= form.text_field :member_name, maxlength: 15 %>
            <%= form.hidden_field :group_id, value: @group.group_id %>
        </div>
        <div class="actions">
            <%= form.submit "追加する", class: "btn btn-sm btn-outline-primary" %>
            <%= link_to "キャンセル", group_show_path(token: @group.token), class: "btn btn-sm btn-outline-secondary" %>
        </div>
    <% end %>
<% end %>

