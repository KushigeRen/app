<%= turbo_frame_tag @member do %>
    <%= bootstrap_form_with(model: @member, url: format_path, local: true, method: :put) do |form| %>
        <div class="member">
            <%= form.text_field :member_name, maxlength: 15, value: @member.member_name %>
            <%= form.hidden_field :member_id, value: @member.member_id %>
            <%= form.hidden_field :group_id, value: @group.group_id %>
        </div>
        <div class="actions">
            <%= form.submit "変更する", class: "btn btn-primary btn-sm me-2" %>
            <%= link_to "キャンセル", group_show_path(token: @group.token), class: "btn btn-sm btn-outline-secondary" %>
        </div>
    <% end %>
<% end %>
