<%= turbo_frame_tag @group do %>
    <%= bootstrap_form_with(model: @group, url: update_group_format_path, local: true, method: :put) do |form| %>
        <div class="group">
            <%= form.text_field :group_name, maxlength: 15, label_class: "hidden-label" %>
            <%= form.hidden_field :group_id, value: @group.group_id %>
            <%= form.hidden_field :token, value: @group.token %>
        </div>
        <div class="actions">
            <%= form.submit "変更する", class: "btn btn-primary btn-sm me-2" %>
            <%= link_to "キャンセル", group_show_path(token: @group.token), class: "btn btn-sm btn-outline-secondary" %>
        </div>
    <% end %>
<% end %>
